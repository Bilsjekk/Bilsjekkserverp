<!DOCTYPE html>
<html>
<head>
    <title>PDF</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf_viewer.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

    <style>
        body {
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .pdf-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .pdf-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
        }

        .pdf-viewer {
            flex: 1;
            height: 100%;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            background-color: white;
            overflow: auto;
        }

        .pdf-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #f5f5f5;
            border-top: 1px solid #ddd;
        }

        .pdf-controls a {
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
        }

        .btn-back:hover {
            background-color: #0056b3;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background-color: #b02a37;
        }

        .pdf-toolbar {
            display: flex;
            align-items: center;
            padding: 10px;
            background-color: #f5f5f5;
            border-bottom: 1px solid #ddd;
        }

        .toolbarButton {
            width: 30px;
            height: 30px;
            background-color: transparent;
            border: none;
            cursor: pointer;
        }

        .pageNumber {
            margin: 0 20px;
        }

    </style>
</head>
<body>
<div class="pdf-container">
    <div class="pdf-toolbar">
        <button id="previous" class="toolbarButton pageUp"></button>
        <div class="pageNumber">
            Page <span id="pageNumber">1</span> of <span id="numPages">-</span>
        </div>
        <button id="next" class="toolbarButton pageDown"></button>
    </div>

    <div class="pdf-viewer" id="pdf-container">

    </div>
</div>
<script>
    const pdfUrl = "<%= pdf.link %>"; // Replace with the actual PDF URL
    const pdfContainer = document.getElementById('pdf-container');

    pdfjsLib.getDocument(pdfUrl).promise.then(pdfDoc => {
        for (let pageNum = 1; pageNum <= pdfDoc.numPages; pageNum++) {
            pdfDoc.getPage(pageNum).then(page => {
                const canvas = document.createElement('canvas');
                pdfContainer.appendChild(canvas);

                const viewport = page.getViewport({ scale: 1 });
                canvas.width = viewport.width;
                canvas.height = viewport.height;

                const context = canvas.getContext('2d');
                const renderTask = page.render({ canvasContext: context, viewport });
                renderTask.promise.then(() => {
                    console.log(`Page ${pageNum} rendered`);
                });
            });
        }
    });

    const previousButton = document.getElementById('previous');
    const nextButton = document.getElementById('next');
    const pageNumberSpan = document.getElementById('pageNumber');
    const numPagesSpan = document.getElementById('numPages');

    previousButton.addEventListener('click', showPreviousPage);
    nextButton.addEventListener('click', showNextPage);

    function showPreviousPage() {
        if (pageNum <= 1) return;
        pageNum--;
        renderPage(pageNum);
    }

    function showNextPage() {
        if (pageNum >= pdfDoc.numPages) return;
        pageNum++;
        renderPage(pageNum);
    }

    function renderPage(pageNumber) {
        pdfContainer.innerHTML = '';
        pdfDoc.getPage(pageNumber).then(page => {
            const canvas = document.createElement('canvas');
            pdfContainer.appendChild(canvas);

            const viewport = page.getViewport({ scale: 1 });
            canvas.width = viewport.width;
            canvas.height = viewport.height;

            const context = canvas.getContext('2d');
            const renderTask = page.render({ canvasContext: context, viewport });
            renderTask.promise.then(() => {
                console.log(`Page ${pageNumber} rendered`);
                pageNumberSpan.textContent = pageNumber;
            });
        });
    }

</script>
</body>
</html>
