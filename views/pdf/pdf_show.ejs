<!DOCTYPE html>
<html>
<head>
    <title>PDF</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf_viewer.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

    <style>
        body {
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .pdf-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .pdf-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
        }

        .pdf-viewer {
            flex: 1;
            height: 100%;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            background-color: white;
            overflow: auto;
        }

        .pdf-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #f5f5f5;
            border-top: 1px solid #ddd;
        }

        .pdf-controls a {
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
        }

        .btn-back:hover {
            background-color: #0056b3;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background-color: #b02a37;
        }
    </style>
</head>
<body>
<div class="pdf-container">
    <div class="pdf-header">
        <h2>PDF Viewer</h2>
        <div class="pdf-controls">
            <a href="/pdfs" class="btn btn-back btn-lg">Tilbake</a>
            <a href="/pdfs" class="btn btn-delete btn-lg">Slett</a>
        </div>
    </div>
    <div class="pdf-viewer" id="pdf-container"></div>
</div>
<script>
    const pdfUrl = "<%= pdf.link %>"; // Replace with the actual PDF URL
    const pdfContainer = document.getElementById('pdf-container');

    pdfjsLib.getDocument(pdfUrl).promise.then(pdfDoc => {
        for (let pageNum = 1; pageNum <= pdfDoc.numPages; pageNum++) {
            pdfDoc.getPage(pageNum).then(page => {
                const canvas = document.createElement('canvas');
                pdfContainer.appendChild(canvas);

                const viewport = page.getViewport({ scale: 1 });
                canvas.width = viewport.width;
                canvas.height = viewport.height;

                const context = canvas.getContext('2d');
                const renderTask = page.render({ canvasContext: context, viewport });
                renderTask.promise.then(() => {
                    console.log(`Page ${pageNum} rendered`);
                });
            });
        }
    });
</script>
</body>
</html>
